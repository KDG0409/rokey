# 순서도대로 while문을 사용하여 프로그램 작성

MyName = ''
MyPass = ''

while True :
    MyName = input( "이름을 입력하세요.\n" )
    if MyName == 'hongkildong' :
        MyPass = input( "패스워드를 입력하세요.\n" )
        if MyPass == 'hahaha' :
            break
        else :
            continue
    else :
        continue

print( "확인되었습니다." )


